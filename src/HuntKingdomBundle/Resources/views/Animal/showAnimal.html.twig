<h2> List of Animals </h2>

<table border="2">

    <tr>
        <th> Reference </th>
        <th> Race </th>
        <th> Season </th>
        <th> Place </th>
        <th> Image </th>
        <th> Number Of Hunts </th>
        <th> Info about the season </th>
    </tr>
    {% for a in animal %}
    <tr>
        <td> {{ a.idA }} </td>
        <td> {{ a.race }} </td>
        <td> {{ a.saison }} </td>
        <td> {{ a.place }} </td>
        <td> <img src="{{ a.image }}" height="60" width="70"> </td>
        <td> {{ a.hunted }} </td>
        <td> {{ a.season.description }} </td>
        <td> <a href="{{ path("hunt_kingdom_updateAnimal",{'id':a.id })}}">Modifier </a> </td>
        <td> <a href="{{ path("hunt_kingdom_deleteAnimal",{'id':a.id })}}"> Supprimer </a> </td>

    </tr>
    {% endfor %}
</table>