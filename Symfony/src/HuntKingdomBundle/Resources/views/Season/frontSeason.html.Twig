{% extends 'Front/front.html.twig' %}
{% block content %}

    <section id="Seasons" class="projects-section bg-light">
    <div class="container">

<div class="row align-items-center no-gutters mb-4 mb-lg-5">
        <div class="col-xl-8 col-lg-7">
            <img class="img-fluid mb-3 mb-lg-0" src="{{ asset('Front/img/bg-masthead.jpg') }}" alt="">
        </div>
        <div class="col-xl-4 col-lg-5">
    {% for s in season %}
            <div class="featured-text text-center text-lg-left">
                <h4>{{ s.nom }}</h4>
                <p class="text-black-50 mb-0"> {{ s.start | date('F d, Y') }} </p>
                <p class="text-black-50 mb-0"> {{ s.finish | date('F d, Y') }} </p>
                <p class="text-black-50 mb-0"> {{ s.description }} </p>

            </div>
    {% endfor %}
        </div>
    </div>
    </div>
    </section>

{% endblock %}